<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping 
			PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.sanqing.po.MessageBoard" table="messageboard_tb"><!-- 每个class对应一个持久化对象 -->
		<id name="UserName" ><!-- id元素用来定义主键标识,并指定主键生成策略 -->
			<generator class="assigned"></generator>
		</id>
		<property name="Theme"></property><!-- 映射Theme属性 -->
		<property name="Content"></property><!-- 映射Content属性 -->
		<property name="Time"></property><!-- 映射time属性 -->
	</class>
</hibernate-mapping>